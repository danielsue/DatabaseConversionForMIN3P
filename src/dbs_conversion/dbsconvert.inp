'amorphous_si'                 ;-label prec
'anhydrite'         
'calcite'                      ;-label neutre, h+
'celestite'
'chalcedony'                   ;-label prec
'clinochlore_'                
'cronstedti,a'      
'cj4-glass'                    ;-label residual 
'daphnite_14a'                 
'dolomite'                     ;-label neutre, h+
 