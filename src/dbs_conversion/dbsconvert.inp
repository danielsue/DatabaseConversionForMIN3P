'h+1'
'na+'
'cl-'
'so4--'

!'redox couples'
!0                             ;number of redox couples (nr)

!'secondary aqueous species'
!8                          ;number of secondary aqueous species
'fe+++'                     ;program give out that it is missing after manually added
'o2(aq)'
'hs-'
'h2s(aq)'
'ch4(aq)'
'oh-'
'co3--'
'co2(aq)'	

!'gases'
